<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns="http://www.springframework.org/schema/integration"
             xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd

		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <channel id="requestChannel_1" datatype="java.lang.String"/>
    <channel id="requestChannel_2" datatype="java.lang.String"/>
    <channel id="requestChannel_3" datatype="java.lang.String"/>
    <channel id="requestChannel_4" datatype="java.lang.String"/>

    <transformer input-channel="requestChannel_1"
                 output-channel="requestChannel_2"
                 ref="transformerOne"
                 method="transform"
    />
    <!--                 expression="(payload + '').toUpperCase()"-->

    <splitter input-channel="requestChannel_2" output-channel="requestChannel_3"
              ref="splitterOne"
              method="split"
              apply-sequence="true"/>

    <transformer input-channel="requestChannel_3"
                 output-channel="requestChannel_4"
                 ref="transformerTwo"
                 method="transform"
    />
    <aggregator input-channel="requestChannel_4"/>


    <!--expression="payload.split('\s')"-->


    <!--
